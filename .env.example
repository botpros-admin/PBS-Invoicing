# ================================================
# PBS INVOICING - ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env.local and fill in your values

# ================================================
# SUPABASE CONFIGURATION
# ================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/api

# Supabase Project URL
VITE_SUPABASE_URL=https://qwvukolqraoucpxjqpmu.supabase.co

# Supabase Anonymous/Public Key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role Key (NEVER expose in frontend - server-side only!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase Project ID
SUPABASE_PROJECT_ID=qwvukolqraoucpxjqpmu

# Supabase Database Password (for direct connections)
SUPABASE_DB_PASSWORD=your_database_password_here

# Supabase JWT Secret (for validating tokens)
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ================================================
# APPLICATION CONFIGURATION
# ================================================

# Application Name
VITE_APP_NAME="PBS Invoicing"

# Application URL (for emails and redirects)
VITE_APP_URL=http://localhost:5173

# Environment (development, staging, production)
VITE_APP_ENV=development

# ================================================
# EMAIL CONFIGURATION (Optional)
# ================================================

# SMTP Settings (if using custom email provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="PBS Invoicing <noreply@pbsinvoicing.com>"

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key

# ================================================
# PAYMENT PROCESSING (Optional)
# ================================================

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ================================================
# FILE STORAGE (Optional)
# ================================================

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=pbs-invoicing-uploads

# ================================================
# MONITORING & ANALYTICS (Optional)
# ================================================

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ================================================
# SECURITY
# ================================================

# Session Configuration
SESSION_SECRET=your_random_session_secret_here

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# DATABASE URLS (for migrations and direct access)
# ================================================

# Direct database URL (for migrations)
DATABASE_URL=postgresql://postgres:your_password@db.qwvukolqraoucpxjqpmu.supabase.co:5432/postgres

# Pooled database URL (for application queries)
DATABASE_POOLING_URL=postgresql://postgres:your_password@db.qwvukolqraoucpxjqpmu.supabase.co:6543/postgres

# ================================================
# FEATURE FLAGS
# ================================================

# Enable/Disable features
VITE_FEATURE_LABS=true
VITE_FEATURE_PAYMENTS=true
VITE_FEATURE_IMPORT=true
VITE_FEATURE_EXPORT=true
VITE_FEATURE_MULTI_TENANT=true

# ================================================
# DEFAULT ORGANIZATION
# ================================================

# Default organization ID (UUID)
DEFAULT_ORGANIZATION_ID=00000000-0000-0000-0000-000000000000
DEFAULT_ORGANIZATION_NAME="Default Organization"

# ================================================
# DEVELOPMENT SETTINGS
# ================================================

# Enable debug mode
VITE_DEBUG=true

# Enable React Query Devtools
VITE_ENABLE_DEVTOOLS=true

# Mock data in development
VITE_USE_MOCK_DATA=false

# ================================================
# API KEYS FOR INTEGRATIONS (Optional)
# ================================================

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ================================================
# NOTES
# ================================================
# 1. Never commit .env files to version control
# 2. Keep production secrets in a secure vault
# 3. Use different values for dev/staging/production
# 4. Rotate keys regularly
# 5. VITE_ prefix exposes variables to the frontend
# 6. Variables without VITE_ prefix are server-side only